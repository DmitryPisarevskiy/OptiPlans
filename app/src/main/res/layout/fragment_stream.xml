<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.StreamFragment">

    <TextView
        android:id="@+id/tv_unit_tag"
        style="@style/GrayCaption"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="PND" />

    <TextView
        android:id="@+id/tv_unit_name"
        style="@style/MidCaption"
        app:layout_constraintTop_toBottomOf="@+id/tv_unit_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Полиэтилен низкого давления" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_unit_name"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_stream_period">
                    <TextView
                        style="@style/SmallText"
                        android:text="@string/period"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_min">
                    <TextView
                        style="@style/SmallText"
                        android:text="@string/min"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_max">
                    <TextView
                        style="@style/SmallText"
                        android:text="@string/max"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_fix">
                    <TextView
                        style="@style/SmallText"
                        android:text="@string/fix"/>
                </TableRow>
                <TableRow
                    android:id="@+id/stream_price">
                    <TextView
                        style="@style/SmallText"
                        android:text="@string/price"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>