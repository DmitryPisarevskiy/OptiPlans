<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        tools:context=".view.StreamFragment">

        <com.example.optiplans.view.StreamView
            android:id="@+id/sv_stream_caption"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="@id/tv_stream_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_stream_name"
            app:layout_constraintEnd_toStartOf="@id/tv_stream_name"/>

        <TextView
            android:id="@+id/tv_stream_stream"
            style="@style/SmallText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/stream_label" />

        <TextView
            android:id="@+id/tv_stream_name"
            style="@style/BigCaption"
            app:layout_constraintTop_toBottomOf="@id/tv_stream_stream"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="ПЭНД" />

        <TextView
            android:id="@+id/tv_stream_tag0"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tag"
            android:textAllCaps="false"
            android:textStyle="normal"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_stream_tag"
            app:layout_constraintTop_toBottomOf="@id/tv_stream_name" />

        <TextView
            android:id="@+id/tv_stream_tag"
            style="@style/TableCaption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_stream_tag0"
            app:layout_constraintTop_toBottomOf="@id/tv_stream_name"
            tools:text="PND" />

        <FrameLayout
            android:id="@+id/fl_stream_sails"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/ll_stream_balance"
            android:background="@color/gray"
            android:layout_marginTop="30dp"/>

        <HorizontalScrollView
            android:id="@+id/hsv_stream_sails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_stream_seils_top"
            app:layout_constraintStart_toStartOf="parent">
            <TableLayout
                android:layout_width="wrap_content"
                android:stretchColumns="*"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_stream_sails_period">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text=""/>
                </TableRow>
                <FrameLayout
                    android:background="@color/light_blue"
                    android:layout_height="1dp">
                </FrameLayout>
                <TableRow
                    android:id="@+id/tr_stream_sails_min">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/min"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_sails_max">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/max"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_sails_price">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/price"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_sails_solution"
                    android:backgroundTint="?attr/colorSecondary"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_width="80dp"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/solution" />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_stream_seils_top"
            style="@style/MidCaption"
            app:layout_constraintTop_toBottomOf="@id/fl_stream_sails"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"
            android:text="@string/sail"/>

        <ImageView
            android:contentDescription="@string/button_collapse_description"
            android:id="@+id/iv_stream_seils_top"
            android:layout_marginStart="5dp"
            android:layout_width="10dp"
            android:layout_height="5dp"
            app:layout_constraintTop_toTopOf="@id/tv_stream_seils_top"
            app:layout_constraintBottom_toBottomOf="@id/tv_stream_seils_top"
            app:layout_constraintStart_toEndOf="@id/tv_stream_seils_top"
            android:background="@drawable/button_collapse"
            android:layout_gravity="center_vertical"
            android:text="@string/sail"/>

        <FrameLayout
            android:id="@+id/fl_stream_purchases"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/hsv_stream_sails"
            android:background="@color/gray" />

        <HorizontalScrollView
            android:id="@+id/hsv_stream_purchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fl_stream_purchases"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TableLayout
                android:layout_width="wrap_content"
                android:stretchColumns="*"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_stream_purchases_period">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:text=""/>
                </TableRow>
                <FrameLayout
                    android:background="@color/light_blue"
                    android:layout_height="1dp">
                </FrameLayout>
                <TableRow
                    android:id="@+id/tr_stream_purchases_min">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/min"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_purchases_max">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/max"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_purchases_price">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/price"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_purchases_solution"
                    android:backgroundTint="?attr/colorSecondary"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_width="80dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/solution"/>
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_stream_purchases_top"
            style="@style/MidCaption"
            app:layout_constraintTop_toBottomOf="@id/fl_stream_purchases"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"
            android:text="@string/purchase"/>

        <ImageView
            android:contentDescription="@string/button_collapse_description"
            android:id="@+id/iv_stream_purchases_top"
            android:layout_marginStart="5dp"
            android:layout_width="10dp"
            android:layout_height="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_stream_purchases_top"
            app:layout_constraintTop_toTopOf="@id/tv_stream_purchases_top"
            app:layout_constraintBottom_toBottomOf="@id/tv_stream_purchases_top"
            android:background="@drawable/button_collapse"
            android:layout_gravity="center_vertical"
            android:text="@string/sail"/>

        <FrameLayout
            android:id="@+id/fl_stream_balance"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_stream_tag"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_stream_balance"
            style="@style/MidCaption"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fl_stream_balance"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            android:text="@string/balance"/>

        <ImageView
            android:contentDescription="@string/button_collapse_description"
            android:id="@+id/iv_stream_balance"
            android:layout_marginStart="5dp"
            android:layout_width="10dp"
            android:layout_height="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_stream_balance"
            app:layout_constraintTop_toTopOf="@id/tv_stream_balance"
            app:layout_constraintBottom_toBottomOf="@id/tv_stream_balance"
            android:background="@drawable/button_collapse"/>

        <LinearLayout
            android:id="@+id/ll_stream_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/fl_stream_balance">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">
                <TextView
                    android:id="@+id/tv_stream_period"
                    style="@style/VerySmallText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    android:text="@string/stream_period"/>
                <FrameLayout
                    android:id="@+id/fl_stream_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/frame"
                    android:layout_marginEnd="20dp">
                    <Spinner
                        android:id="@+id/s_stream_period"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/period"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_stream_produced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_stream_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
