<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.optiplans.view.StreamView
        android:id="@+id/sv_unit_balance_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="8dp"
        android:layout_height="8dp"/>

    <TextView
        android:id="@+id/tv_unit_balance_item"
        style="@style/ItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sv_unit_balance_item"
        app:layout_constraintBottom_toBottomOf="@id/sv_unit_balance_item"
        app:layout_constraintStart_toEndOf="@id/sv_unit_balance_item"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="center_vertical"
        tools:text = "Наименвоание потока"/>

</androidx.constraintlayout.widget.ConstraintLayout>