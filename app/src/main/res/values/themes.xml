<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OptiPlans" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#474B61</item>
        <item name="colorOnPrimary">#5C5D5E</item>
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">#0C283E</item>
    </style>
    <style name="Theme.OptiPlans.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.OptiPlans.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.OptiPlans.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>