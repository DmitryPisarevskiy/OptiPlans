<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_stream_used_item"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/uv_stream_used"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ПЭНД" />

    <com.example.optiplans.view.StreamView
        android:id="@+id/sv_stream_used"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fl_stream_used"
        android:layout_width="12dp"
        android:layout_height="12dp"/>

    <FrameLayout
        android:id="@+id/fl_stream_used"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/blue"
        android:layout_width="45dp"
        android:layout_height="1dp"/>

    <com.example.optiplans.view.UnitView
        android:id="@+id/uv_stream_used"
        android:layout_width="20dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/sv_stream_used"
        app:layout_constraintTop_toTopOf="@id/sv_stream_used"
        app:layout_constraintBottom_toBottomOf="@id/sv_stream_used"/>

    <TextView
        android:id="@+id/tv_stream_used_value"
        style="@style/SmallText"
        android:textColor="?attr/colorOnSecondary"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toTopOf="@+id/fl_stream_used"
        app:layout_constraintEnd_toStartOf="@id/sv_stream_used"
        tools:text="120" />

    <FrameLayout
        android:id="@+id/fl_stream_used_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blue"
        android:layout_width="1dp"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>