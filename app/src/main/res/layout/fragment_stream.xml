<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.StreamFragment">

    <TextView
        android:id="@+id/tv_stream_tag"
        style="@style/GrayCaption"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="PND" />

    <TextView
        android:id="@+id/tv_stream_name"
        style="@style/BigCaption"
        app:layout_constraintTop_toBottomOf="@+id/tv_stream_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Полиэтилен низкого давления" />

    <HorizontalScrollView
        android:id="@+id/hsv_stream_sails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_stream_name"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="wrap_content"
                android:stretchColumns="*"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_stream_sails_period"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/MidCaption"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/sails"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_sails_min"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/min"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_sails_max"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/max"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_sails_fix"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/fix"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_sails_price"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/price"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_sails_solution"
                    android:backgroundTint="@color/light_gray"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/solution"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/hsv_stream_purchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/hsv_stream_sails"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:stretchColumns="*"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_stream_purchases_period"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/MidCaption"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/purchases"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_purchases_min"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/min"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_purchases_max"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/max"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_purchases_fix"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/fix"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_purchases_price"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/price"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_stream_purchases_solution"
                    android:backgroundTint="@color/light_gray"
                    android:background="@drawable/frame">
                    <TextView
                        style="@style/SmallText"
                        android:layout_marginStart="2dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/solution"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>